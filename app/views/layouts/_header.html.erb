<div class="top-bar">
    <div class="top-bar-left">
        <%= link_to "Maintenance App", root_path, id:"logo" %>
    </div>
    
    <div class="top-bar-right">
        
        <nav>
            <ul class="menu horizontal">
                <li><%= link_to "Dashboard",    root_path %></li>
                <li><%= link_to "Tickets",      ticket_path%></li>
                <li><%= link_to "Knowledge_platform",     knowledge_platform_path%></li>
                <li><%= link_to "Reports",      reports_path%></li>
                <li><%= link_to "Contact_us",      contact_us_path%></li>
                <% if logged_in? %>
                    <li><%= link_to "Users", '#' %></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Account <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "profile", current_user %></li>
                            <li><%= link_to "settings", edit_user_path(current_user) %></li>
                            <li class="divider"></li>
                            <li>
                                <%= link_to "Log out", logout_path, method: "delete" %>
                            </li>
                        </ul>
                    </li>
                <% else %>
                    <li><%= link_to "Log in", login_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</div>







